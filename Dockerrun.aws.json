{
	"AWSEBDockerrunVersion": "3",
	"containerDefinitions": [
		{
			"name": "backend",
			"image": "dittocs/backend:latest",
			"essential": true,
			"memory": 128,
			"portMappings": [
				{
					"containerPort": 3001,
					"hostPort": 3001
				}
			],
			"environment": [
				{ "name": "NODE_ENV", "value": "production" },
				{ "name": "RDS_HOST", "value": "${RDS_HOST}" },
				{ "name": "RDS_PORT", "value": "${RDS_PORT}" },
				{ "name": "RDS_USERNAME", "value": "${RDS_USERNAME}" },
				{ "name": "RDS_PASSWORD", "value": "${RDS_PASSWORD}" },
				{ "name": "JWT_SECRET", "value": "${JWT_SECRET}" },
				{ "name": "SESSION_SECRET", "value": "${SESSION_SECRET}" }
			]
		},
		{
			"name": "frontend",
			"image": "dittocs/frontend:latest",
			"essential": true,
			"memory": 128,
			"portMappings": [
				{
					"containerPort": 3000,
					"hostPort": 3000
				}
			],
			"environment": [
				{ "name": "NODE_ENV", "value": "production" },
				{ "name": "GITHUB_CLIENT_ID", "value": "${GITHUB_CLIENT_ID}" },
				{ "name": "GITHUB_CLIENT_SECRET", "value": "${GITHUB_CLIENT_SECRET}" },
				{ "name": "JWT_SECRET", "value": "${JWT_SECRET}" }
			]
		}
	]
}
